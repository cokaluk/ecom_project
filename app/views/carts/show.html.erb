<h1>Cart#show</h1>
<% if session[:cart].any? %>
  <% session[:cart].each do | product | %>
    <div>
      <p>
        <%= product[:name] %> <%= number_to_currency(product[:price])%>
        <%= product[:quantity] %>
        <%= debug product %>
      </p>
      <%# removed  remove from cart button for now is causing errors cuz product_id is not being assigned %>
      <%= button_to "Remove from Cart", remove_item_cart_path(product_id: product["id"]), method: :delete %>
    </div>
  <% end %>
<% else %>
  <p>Your cart is empty</p>
<% end %>
